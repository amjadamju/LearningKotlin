<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="0"
            android:layout_width="176dp"
            android:layout_height="138dp" android:layout_centerHorizontal="true"
            android:width="200dp"
            android:height="150dp"
            android:textSize="100dp"
            android:layout_alignParentTop="true" android:id="@+id/count" android:layout_marginTop="183dp"
            android:layout_above="@+id/countButton" android:layout_marginBottom="51dp"/>

    <Button
            android:text="Count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countButton" android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="91dp"
            android:onClick="counter" />

</RelativeLayout>